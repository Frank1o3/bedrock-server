{
  "oreui_online_safety_proceed_button@common_buttons.tyel_design:green_text_button": {
    "size": "$button_size",
    "$pressed_button_name": "button.proceed",
    "$button_text": "onlinePlay.proceed"
  },

  "oreui_online_safety_back_button@common_buttons.tyel_design:light_text_button": {
    "size": "$button_size",
    "$pressed_button_name": "button.back",
    "$button_text": "onlinePlay.Back"
  },

  "online_safety_description": {
    "offset": [ 0, 8 ],
    "size": [ "default", "default" ],
    "max_size": [ "100% - 8px", "default" ]
  },

  "ip_safety_description": {
    "offset": [ 0, 8 ],
    "size": [ "default", "default" ],
    "max_size": [ "100% - 8px", "default" ]
  },

  "online_safety_label_panel": {
    "$scrolling_content_anchor_from": "top_middle",
    "$scrolling_content_anchor_to": "top_middle"
  },

  "ip_safety_label_panel": {
    "$scrolling_content_anchor_from": "top_middle",
    "$scrolling_content_anchor_to": "top_middle"
  },

  "do_not_show_checkbox/header_description_stack_panel/buffer_panel/label": {
    "color": "$main_header_text_color"
  },

  "online_safety_dialog": {
    "$oreui_dialog_style__animate_dialog": true,
    "$middle_button_panel": "online_safety.oreui_online_safety_proceed_button",
    "$bottom_button_panel": "online_safety.oreui_online_safety_back_button"
  },

  "ip_safety_dialog": {
    "$oreui_dialog_style__animate_dialog": true,
    "$middle_button_panel": "online_safety.oreui_online_safety_proceed_button",
    "$bottom_button_panel": "online_safety.oreui_online_safety_back_button"
  },

  "online_safety_screen": {
    "$tyel_theme_screen_alias": "online_safety",
    "$screen_helpers_content": "common.common_screen_helpers",
    "$show_gamepad_helper_b_tooltip": false,
    "$is_full_screen_layout": true,
    "$show_dialog_background": false,
    "$screen_animations": [
      "@tyel_oreui_design__anims.oreui_dialog_entrance_animation_fade",
      "@tyel_oreui_design__anims.oreui_dialog_entrance_animation_pop_fade",
      "@tyel_oreui_design__anims.oreui_dialog_exit_animation_push_fade",
      "@tyel_oreui_design__anims.oreui_dialog_exit_animation_pop_fade"
    ]
  },

  "online_safety_screen_content": {
    "modifications": [
      {
        "control_name": "gamepad_helpers",
        "operation": "remove"
      }
    ]
  },

  "ip_safety_screen": {
    "$tyel_theme_screen_alias": "ip_safety",
    "$screen_helpers_content": "common.common_screen_helpers",
    "$show_gamepad_helper_b_tooltip": false,
    "$is_full_screen_layout": true,
    "$show_dialog_background": false,
    "force_render_below": true,
    "$screen_animations": [
      "@tyel_oreui_design__anims.oreui_dialog_entrance_animation_fade",
      "@tyel_oreui_design__anims.oreui_dialog_entrance_animation_pop_fade",
      "@tyel_oreui_design__anims.oreui_dialog_exit_animation_push_fade",
      "@tyel_oreui_design__anims.oreui_dialog_exit_animation_pop_fade"
    ]
  },

  "ip_safety_screen_content": {
    "modifications": [
      {
        "control_name": "gamepad_helpers",
        "operation": "remove"
      }
    ]
  }
}