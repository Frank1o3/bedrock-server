{
  "gathering_info_screen": {
    "$tyel_theme_screen_alias": "gathering_info",
    "$screen_helpers_content": "common.common_screen_helpers",
    "$header_safezone_control": "common_store.store_top_bar_filler",
    "$header_bar_control": "common_store.store_top_bar"
  },

  "info_content/left_panel/stack/button_and_caption": {
    "modifications": [
      {
        "control_name": "action_button",
        "operation": "replace",
        "value": [
          {
            "action_button@common_buttons.tyel_design:light_text_button": {
              "size": [ "100%", 28 ],
              "$pressed_button_name": "button.action",
              "$button_text": "#action_button_text",
              "$button_text_binding_type": "global",
              "bindings": [
                {
                  "binding_name": "#action_button_enabled",
                  "binding_name_override": "#enabled"
                }
              ]
            }
          }
        ]
      }
    ]
  },

  "info_content/left_panel/stack": {
    "modifications": [
      {
        "control_name": "info_button",
        "operation": "replace",
        "value": [
          {
            "info_button@common_buttons.tyel_design:light_text_button": {
              "size": [ "100%", 28 ],
              "$pressed_button_name": "button.info",
              "$button_text": "#info_button_text",
              "$button_text_binding_type": "global"
            }
          }
        ]
      },
      {
        "control_name": "gamepad_helper_panel",
        "operation": "remove"
      }
    ]
  },

  "info_content/left_panel": {
    "size": [ "40%", "100% - 30px" ],
    "offset": [ 0, 30 ]
  },

  "info_content/right_panel": {
    "size": [ "60% - 4px", "100% - 30px" ],
    "offset": [ 0, 30 ]
  },

  "section_divider": {
    "size": [ "4px", "100% - 28px" ],
    "offset": [ "40%", "29px" ]
  }
}