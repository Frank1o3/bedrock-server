{
  // To developers, the paper doll renderer using '#selected_skin' binding
  // is now enabled by default, using the skin preview toggle.
  "profile_screen_debug_view": {
    "ignored": true
  },

  "profile_screen_mid_padding": {
    "bindings": []
  },
  // ========

  "bottom_panel_content": {
    "max_size": "$profile_screen_bottom_panel_content_max_size",
    "$profile_screen_bottom_panel_content_max_size|default": [ 480, "100%cm" ]
  },

  "profile_screen": {
    "$store_header_icon": "textures/ui/sidebar_icons/my_characters",
    "$use_custom_panorama": "$is_pregame",
    "$screen_bg_content": "common.empty_panel",
    "$fill_alpha": "$fill_alpha",
    "$screen_helpers_content": "profile.profile_screen_helpers_content",
    "$screen_helpers_content_layer": 600,
    "$main_panel_control_animations": [
      "@common.container_screen_entrance_animation_push",
      "@common.container_screen_entrance_animation_pop",
      "@common.container_screen_exit_animation_push",
      "@common.container_screen_exit_animation_pop",
      "@common.screen_entrance_animation_push_fade",
      "@common.screen_entrance_animation_pop_fade",
      "@common.screen_exit_animation_push_fade",
      "@common.screen_exit_animation_pop_fade"
    ]
  },

  "profile_screen_main_content": {
    "anims": "$main_panel_control_animations",
    "$main_panel_control_animations|default": [],
    "propagate_alpha": true,
    "disable_anim_fast_forward": true,
    "animation_reset_name": "screen_animation_reset"
  },

  "preset_arrow_button": {
    "$focus_override_up": "$arrow_button_focus_override_up"
  },

  "preset_arrow_button_panel": {
    "$arrow_button_focus_override_up|default": "preview_skin_full_toggle"
  },

  "persona_preset_section_panel": {
    "$hide_description": true
  },

  "preview_skin_full_toggle@common_toggles.light_content_toggle_visibility": {
    "size": [ 22, 22 ],
    "$button_content": "persona.view_character_icon",
    "$toggle_name": "preview_skin_full_toggle",
    "$toggle_tts_name": "dr.header.previewAppearance",
    "$focus_id": "preview_skin_full_toggle",
    "$focus_override_down": "preset_arrow_button_left",
    "$button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.menu_select",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_ok",
        "to_button_id": "button.menu_ok",
        "mapping_type": "focused"
      },
      {
        "from_button_id": "button.controller_secondary_select_right",
        "to_button_id": "button.menu_select",
        "mapping_type": "global"
      }
    ]
  },

  "skin_preview": {
    "type": "input_panel",
    "anchor_to": "top_middle",
    "anchor_from": "top_middle",
    "size": [ "80%", "80%" ],
    "gesture_tracking_button": "button.turn_doll",
    "button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.turn_doll",
        "mapping_type": "pressed",
        "button_up_right_of_first_refusal": true
      }
    ],
    "focus_enabled": true,
    "layer": 5,
    "controls": [
      {
        "skin_preview_panel": {
          "type": "panel",
          "size": [ "51%y", "110%" ],
          "controls": [
            {
              "paper_doll": {
                "type": "custom",
                "renderer": "paper_doll_renderer",
                "camera_tilt_degrees": -10,
                "starting_rotation": 30,
                "rotation": "gesture_x",
                "offset": [ 0, -2 ],
                "layer": 5,
                "use_selected_skin": false,

                "animation_reset_name": "screen_animation_reset",
                "anims": [
                  "@common.screen_exit_size_animation_push",
                  "@common.screen_exit_size_animation_pop",
                  "@common.screen_entrance_size_animation_push",
                  "@common.screen_entrance_size_animation_pop"
                ],
                "bindings": [
                  {
                    "binding_type": "global",
                    "binding_name": "#selected_skin"
                  },
                  {
                    "binding_type": "view",
                    "source_control_name": "skin_preview",
                    "source_property_name": "#gesture_delta_source",
                    "target_property_name": "#gesture_delta_source"
                  },
                  {
                    "binding_type": "view",
                    "source_control_name": "skin_preview",
                    "source_property_name": "#gesture_mouse_delta_x",
                    "target_property_name": "#gesture_mouse_delta_x"
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "profile_screen_preview_panel_content": {
    "type": "panel",
    "focus_container": true,
    "use_last_focus": false,
    "focus_wrap_enabled": false,
    "focus_navigation_mode_left": "$main_content_focus_container_left",
    "focus_container_custom_left": "$main_content_focus_container_left_custom",
    "$preset_arrow_button_layer": 10,

    "anims": "$main_panel_control_animations",
    "$main_panel_control_animations|default": [],
    "propagate_alpha": true,
    "disable_anim_fast_forward": true,
    "animation_reset_name": "screen_animation_reset",

    "controls": [
      {
        "skin_preview_panel": {
          "type": "panel",
          "size": [ "100%", "100%" ],
          "controls": [
            {
              "skin_preview@profile.skin_preview": {
              }
            }
          ]
        }
      },
      {
        "arrow_left_panel@profile.preset_arrow_button_left_panel": {
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "offset": [ 8, 0 ]
        }
      },
      {
        "arrow_right_panel@profile.preset_arrow_button_right_panel": {
          "anchor_from": "right_middle",
          "anchor_to": "right_middle",
          "offset": [ -8, 0 ]
        }
      }
    ]
  },

  "featured_pieces_info_panel": {
    "size": [ "100%", 54 ],
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "feature_set_visibility_toggle",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ]
  },

  "featured_persona_pieces_content_panel": {
    "size": [ "100%", "100%c" ],
    "modifications": [
      {
        "array_name": "controls",
        "operation": "insert_back",
        "value": [
          {
            "padding_hack@common.empty_panel": {
              "size": [ "100%", -14 ],
              "bindings": [
                {
                  "binding_type": "view",
                  "source_control_name": "feature_set_visibility_toggle",
                  "source_property_name": "#toggle_state",
                  "target_property_name": "#visible"
                }
              ]
            }
          }
        ]
      }
    ]
  },

  "featured_skins_info_panel": {
    "size": [ "100%", 35 ],
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "feature_set_visibility_toggle",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ]
  },

  "featured_custom_skins_content_panel": {
    "size": [ "100%", "100%c" ],
    "modifications": [
      {
        "array_name": "controls",
        "operation": "insert_back",
        "value": [
          {
            "padding_hack@common.empty_panel": {
              "size": [ "100%", 5 ],
              "bindings": [
                {
                  "binding_type": "view",
                  "source_control_name": "feature_set_visibility_toggle",
                  "source_property_name": "#toggle_state",
                  "target_property_name": "#visible"
                }
              ]
            }
          }
        ]
      }
    ]
  },

  "feature_set_stack_panel": {
    "size": [ "100%", "100%cm" ],
    "modifications": [
      {
        "array_name": "controls",
        "operation": "insert_front",
        "value": [
          {
            "feature_set_visibility_toggle@common_toggles.icon_toggle": {
              "size": [ "100%", 14 ],
              "$toggle_name": "feature_set_visibility_toggle",
              "$toggle_on_image": "textures/ui/arrow_down_white",
              "$toggle_off_image": "textures/ui/arrow_up_white",
              "$toggle_image_size": [ 7, 4 ],
              "$toggle_image_anchor": "right_middle",
              "$toggle_image_offset": [ -4, 0 ],
              "anchor_from": "top_right",
              "anchor_to": "top_right",
              "layer": 6
            }
          },
          {
            "featured_pieces_tag_wrapper": {
              "type": "panel",
              "size": [ 0, 0 ],
              "anchor_from": "top_right",
              "anchor_to": "top_right",
              "bindings": [
                {
                  "binding_name": "#is_classic_skin_profile_selected",
                  "binding_name_override": "#visible"
                }
              ],
              "controls": [
                {
                  "featured_pieces_info_tags_panel@profile.featured_info_tags_panel": {
                    "$tag_collector_mode": "pieces"
                  }
                }
              ]
            }
          },
          {
            "featured_skins_tag_wrapper": {
              "type": "panel",
              "size": [ 0, 0 ],
              "anchor_from": "top_right",
              "anchor_to": "top_right",
              "bindings": [
                {
                  "binding_name": "(not #is_classic_skin_profile_selected)",
                  "binding_name_override": "#visible"
                }
              ],
              "controls": [
                {
                  "featured_pieces_info_tags_panel@profile.featured_info_tags_panel": {
                    "$tag_collector_mode": "skin_packs"
                  }
                }
              ]
            }
          }
        ]
      }
    ]
  },

  "profile_screen_panel_content": {
    "type": "panel",
    "controls": [
      {
        "profile_screen_main_panel_content@profile.profile_screen_main_panel_content": {
          "bindings": [
            {
              "binding_type": "view",
              "source_control_name": "preview_skin_full_toggle",
              "source_property_name": "(not #toggle_state)",
              "target_property_name": "#visible"
            }
          ]
        }
      },
      {
        "profile_screen_preview_panel_content@profile.profile_screen_preview_panel_content": {
          "bindings": [
            {
              "binding_type": "view",
              "source_control_name": "preview_skin_full_toggle",
              "source_property_name": "#toggle_state",
              "target_property_name": "#visible"
            }
          ]
        }
      },
      {
        "preview_skin_full_toggle@profile.preview_skin_full_toggle": {
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "layer": "($preset_appearance_front_layer + 5)",
          "offset": [ 2, 2 ]
        }
      },
      {
        "skin_name": {
          "type": "label",
          "size": [ "100%", "default" ],
          "layer": "($preset_appearance_front_layer + 15)",
          "color": "$dressing_room_right_side_default_text_color",
          "text": "#selected_skin_name",
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "offset": [ 26, 4 ],
          "bindings": [
            {
              "binding_name": "#selected_skin_name"
            },
            {
              "ignored": "$debug_mode",
              "binding_name": "#is_using_dressing_room_debugging",
              "binding_name_override": "#visible"
            }
          ]
        }
      }
    ]
  },

  "profile_screen_main_panel": {
    "$sidebar_main_view_content": "profile.profile_screen_panel_content"
  },

  "profile_screen_main_content/featured_section_disabled_padding": {
    "ignored": false,
    "bindings": [
      {
        "binding_name": "#marketplace_disabled",
        "binding_name_override": "#visible"
      }
    ]
  },

  "modal_window_input_blocker": {
    "size": [ "150%", "150%" ]
  },

  "popup_info_panel_header_content": {
    "type": "panel",
    "$ignore_close_button|default": false,
    "$show_close_button": true,
    "controls": [
      {
        "dialog_title_label_panel": {
          "type": "panel",
          "size": [ "100% - 16px", 24 ],
          "controls": [
            {
              "title_text@profile.general_text_field": {
                "size": [ "100%", "default" ],
                "max_size": [ "100%", 20 ],
                "text": "$title_text",
                "text_alignment": "center",
                "layer": 2,
                "$title_text|default": "#title_text",
                "$title_text_binding_name|default": "#none",
                "color": "$main_header_text_color",
                "bindings": [
                  {
                    "binding_name": "$title_text_binding_name",
                    "binding_name_override": "#title_text"
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "close_button@tyel_oreui_design__buttons.close_button": {
          "ignored": "$ignore_close_button",
          "size": [ 24, 24 ],
          "anchor_from": "top_right",
          "anchor_to": "top_right",
          "$close_button_offset": [ 0, 0 ]
        }
      }
    ]
  },

  "popup_info_panel_button_panel": {
    "type": "panel",
    "controls": [
      {
        "button@$button_control": {
          "size": [ "100%", 30 ],
          "offset": [ 0, 0 ]
        }
      }
    ]
  },

  "differences_popup_content": {
    "offset": [ 0, 0 ],
    "size": [ "100% - 4px", "100%" ]
  },

  "profile_common_dialog": {
    "modifications": [
      {
        "array_name": "controls",
        "operation": "insert_back",
        "value": [
          {
            "popup_dynamic_helpers_panel@popup_dialog.popup_dynamic_helpers_panel": {
              "layer": 600,
              "anchor_from": "bottom_middle",
              "anchor_to": "top_middle"
            }
          }
        ]
      }
    ]
  },

  "popup_info_panel": {
    "size": "$popup_panel_size",
    "max_size": "$popup_panel_max_size",
    "$popup_panel_size|default": [ 369, 230 ],
    "$popup_panel_max_size|default": "$popup_panel_size",
    "modifications": [
      {
        "control_name": "frame",
        "operation": "replace",
        "value": [
          {
            "frame@tyel_oreui_design__dialogs.oreui_dialog_hollowed_panel": {
              "$ignore_close_button|default": true,
              "$show_close_button": true,
              "$close_button_visible_binding_type": "global",

              "$dialog_body_indent_size": [ "100%", "100% - 28px - 46px" ],
              "$dialog_footer_content_size": [ "100%", 30 ],

              "$dialog_header_content": "profile.popup_info_panel_header_content",
              "$dialog_body_content": "profile.differences_popup_content",
              "$button_control": "profile.differences_popup_ok_button",
              "$button_panel": "profile.popup_info_panel_button_panel",
              "$oreui_dialog_anims": [
                "@tyel_oreui_design__anims.oreui_popup_dialog_hollowed_anim_size"
              ]
            }
          }
        ]
      }
    ]
  },

  "popup_dialog__difference_information": {
    "$popup_panel_max_size": [ 345, 250 ]
  },

  "popup_dialog__delete_persona": {
    "$show_close_button": false,
    "size": [ "100%", "100%" ],
    "modifications": [
      {
        "array_name": "controls",
        "operation": "insert_front",
        "value": [
          {
            "background_image": {
              "type": "image",
              "size": [ "150%", "150%" ],
              "texture": "textures/ui/White",
              "color": "$dressing_room_dark_bg_color",
              "alpha": 0.8
            }
          },
          {
            "popup_dynamic_helpers_panel@popup_dialog.popup_dynamic_helpers_panel": {
              "layer": 600,
              "anchor_from": "bottom_middle",
              "anchor_to": "top_middle"
            }
          }
        ]
      }
    ]
  },

  "popup_dialog__delete_persona/popup_dialog_bg": {
    "size": [ 260, 130 ]
  },

  "popup_dialog__create_persona": {
    "$popup_panel_size": [ 248, 180 ]
  },

  "popup_toast": {
    "layer": 1000,
    "$toast_control": "toast_message",
    "$display_time": 3.0,
    "$transition_in_time": 0.5,
    "$transition_out_time": 0.3,
    "$popup_size": [ 300, "100%cm" ],
    "$toast_anchor_from": "top_middle",
    "$toast_anchor_to": "top_middle",
    "$toast_offset": "@toast_screen.formfit_toast_offset_anim_start",
    "$alpha_anims": []
  },

